<MainPage>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint : 1, .1
            #heigt : "48dp"

            Button:
                text: "Calculator"
                on_release: sm.current = "CalculatorPage"

            Button:
                text: "Settings"
                on_release: sm.current = "SettingsPage"

        ScreenManager:
            id: sm
            CalculatorPage:
            SettingsPage:

<CalculatorPage>:
    name: "CalculatorPage"
    BoxLayout:
        orientation: "vertical"

        BoxLayout:      ## ISLEMLERI GOSTERILDIGI BOLUM
            Label:
                id: lbl_display

        BoxLayout:      ## EN USTTEKI TUS TAKIMI
            size_hint: 1,.3
            Button:
                text: "("
                on_press: root.btn(self.text)
            Button:
                text: ")"
                on_press: root.btn(self.text)
            Button:
                text: "/"
                on_press: root.btn(self.text)
            Button:
                text: "*"
                on_press: root.btn(self.text)
            Button:
                text: "-"
                on_press: root.btn(self.text)
            Button:
                text: "C"
                on_press: root.sil_hepsi()
            Button:
                text: "Del"
                on_press: root.sil_bironce()

        BoxLayout:
            StackLayout:
                orientation: "lr-tb"
                #cols: 3
                #rows: 3
                padding : 15
                spacing : 2
                canvas.before :
                    Color:
                        rgba: .5, .5, .5, 1
                    Rectangle :
                        pos : self.pos
                        size : self.size

                Button:
                    text: "7"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)
                Button:
                    text: "8"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)
                Button:
                    text: "9"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)
                Button:
                    text: "4"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)
                Button:
                    text: "5"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)
                Button:
                    text: "6"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)
                Button:
                    text: "1"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)
                Button:
                    text: "2"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)
                Button:
                    text: "3"
                    size_hint:1/3,1/3
                    on_press: root.btn(self.text)

            BoxLayout:
                size_hint: 1/6,1
                Button:
                    text: "+"
                    on_press: root.btn(self.text)
        BoxLayout:
            size_hint: 1,.3
            Button:
                text: "0"
                on_press: root.btn(self.text)
            Button:
                text: "."
                on_press: root.btn(self.text)
            Button:
                text: "="
                on_press: root.sonuc()

<SettingsPage>:
    name: "SettingsPage"
    BoxLayout:
        orientation: "vertical"
        Button:
            size_hint:.2,.2
            text:"Goruntu Ayarlari"
        Button:
            size_hint:.2,.2
            text:"Font Ayarlari"
        Button:
            size_hint:.2,.2
            text:"Renk Ayarlari"